<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="280dp"
    android:layout_marginRight="8dp"
    android:elevation="4dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/primaryColor"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/anime_detail_image_container"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="@color/primaryColor">

            <ImageView
                android:id="@+id/anime_item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher_round" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/anime_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/anime_detail_image_container"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Anime Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/anime_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/anime_item_title"
            android:layout_centerHorizontal="true"
            android:text="Description anime"
            android:textColor="#C5B1E6"
            android:textSize="16sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>